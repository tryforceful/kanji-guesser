{
  "name": "kanji-guesser",
  "description": "Guess the kanji!",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage",
    "eject": "react-scripts eject",
    "": "",
    "prettier": "prettier --list-different 'src/**/*.ts' || (echo '\nPlease fix code formatting by running:\nnpm run prettier:fix\n'; exit 1)",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "lint": "tslint -p ./",
    "tsc": "tsc -p ./ --noEmit",
    "tsc:watch": "tsc -p ./ --noEmit -w",
    "jest": "jest --config jest.config.json",
    "jest:watch": "jest --config jest.config.json --watch",
    "jest:update": "jest --config jest.config.json -u",
    "ci-check": "yarn prettier && yarn lint && yarn tsc && yarn jest"
  },
  "dependencies": {
    "@capacitor/core": "1.4.0",
    "@ionic/react": "^4.11.8",
    "@ionic/react-router": "^4.11.8",
    "@stencil/core": "^1.8.6",
    "@testing-library/jest-dom": "^5.1.0",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^8.0.3",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^24.0.25",
    "@types/lodash.shuffle": "^4.2.6",
    "@types/node": "^12.12.24",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-router": "^5.1.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-test-renderer": "^16.9.2",
    "@types/styled-components": "^4.4.2",
    "classnames": "^2.2.6",
    "ionicons": "^4.6.3",
    "lodash.shuffle": "^4.2.0",
    "node-sass": "^4.13.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "styled-components": "^5.0.0",
    "typescript": "3.7.4"
  },
  "devDependencies": {
    "@capacitor/cli": "1.4.0",
    "codecov": "^3.6.4",
    "jest-serializer-html": "^7.0.0",
    "react-test-renderer": "^16.12.0",
    "ts-jest": "^25.1.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "snapshotSerializers": [
      "jest-serializer-html"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
